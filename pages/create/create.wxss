/* pages/create/create.wxss */
.page-body {
  width: 100%;
  flex-grow: 1;
  overflow-x: hidden;
}
form{
  width: 100%;
}
.page-section{
  width: 100%;
  margin-bottom: 10rpx;
}
.page-section-title{
  font-size: 28rpx;
  color: #000000;
  font-weight: bold;
  margin-bottom: 10rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.weui-cells {
  position: relative;
  margin-top: 1.17647059em;
  background-color: #FFFFFF;
  line-height: 1.41176471;
  font-size: 17px;
}
.weui-cells:before {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  height: 1px;
  border-top: 1rpx solid #D9D9D9;
  color: #D9D9D9;
}
.weui-cell:before {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  height: 1px;
  border-top: 1rpx solid #D9D9D9;
  color: #D9D9D9;
}
.weui-cells:after {
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 1px;
  border-bottom: 1rpx solid #D9D9D9;
  color: #D9D9D9;
}
.weui-cells_after-title {
  margin-top: 0;
}

.weui-cell {
  padding: 0px 15px;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.weui-cell_input {
  padding-top: 0;
  padding-bottom: 0;
}

.weui-cell__bd {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
}
.weui-input {
  height: 2em;
  min-height: 2.58823529em;
  line-height: 2.58823529em;
}
input {
  width: 100%;
}
.weui-input-rightbutton{
  float: left;
  width: auto;
}
.mini-btn-rightbutton {
  float: left;
  margin-left: 10px;
  margin-top: 10px;
}
.images-wrapper {
  padding: 20rpx;
  background-color: #fff;
  margin-top: 20rpx;
}
.images-wrapper-text {
  font-size: 28rpx;
}
.images-list {
  display: flex;
  margin-top: 20rpx;
  flex-wrap: wrap;
}
.images-image {
  width: 150rpx;
  height: 150rpx;
  margin: 10rpx;
}
.images-image-plus {
  border: 1px solid #999;
}
.part_view_hide{
    display: none;
}
.part_view_show{
    display: block;
}
.much_people_view_hide{
    display: none;
}
.much_people_view_show{
    display: block;
}