<view class="container">
  <view class="page-body">
    <view class="page-section">
      <view class="page-section-title">汇总</view>
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-check__label">
          <view class="weui-cell__bd">
              <input class="weui-input"  name="input" value="总金额1000元 25笔" disabled="true" />
            </view>
        </view>
      </view>
    </view>
    <view class="page-section">
      <view class="page-section-title">收支</view>
      <view class="weui-cells weui-cells_after-title">
          <view class="weui-cell weui-check__label" wx:for="{{items}}" wx:key="{{item.value}}">
            <view class="weui-cell__bd">{{item.name}}</view>
            <view class="weui-cell__bd">
              <input class="weui-input"  name="input" value="100" disabled="true" />
            </view>
            <view class="weui-cell__bd">{{item.name}}</view>
          </view>
      </view>
    </view>
  </view> 
</view>