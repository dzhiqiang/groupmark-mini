<view class="container">
  <view class="page-body">
    <view class="page-section">
      <view class="page-section-title">项目</view>
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__bd">
            <view class="weui-input"><text>吃饭</text></view>
          </view>
        </view>
      </view>
    </view>
    <view class="page-section">
      <view class="page-section-title">团</view>
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__bd">
            <input class="weui-input weui-input-rightbutton" disabled="true"  value="段李团"></input>
            <button class="mini-btn mini-btn-rightbutton" type="primary" size="mini" plain="true" >部分</button>
          </view>
        </view>
      </view>
    </view>
    <view class="page__bd part_view_hide {{partShowView?'part_view_show':''}}">
        <view class="section section_gap">
            <checkbox-group bindchange="checkboxChange">
                <label class="checkbox" wx:for-items="{{checkitems}}">
                    <checkbox value="{{item.name}}" checked="{{item.checked}}"/>{{item.value}}
                </label>
            </checkbox-group>
        </view>
    </view>
    <view class="page-section">
        <view class="page-section-title">金额</view>
        <view class="weui-cells weui-cells_after-title">
          <view class="weui-cell weui-cell_input">
            <view class="weui-cell__bd">
              <input class="weui-input weui-input-rightbutton" disabled="true" value="100元" />
              <button class="mini-btn mini-btn-rightbutton" type="primary" size="mini" plain="true">多人</button>
            </view>
          </view>
        </view>
    </view>
    <view class="page-section much_people_view_hide {{muchPeopleShowView?'much_people_view_show':''}}" >
       <view class="page-section-title">请选择出款人</view>
       <view class="weui-cells weui-cells_after-title">
        <checkbox-group>
          <view class="weui-cell weui-check__label" wx:for="{{items}}" wx:key="{{item.value}}">
            <view class="weui-cell__bd">{{item.name}}</view>
            <view class="weui-cell__bd">
              <input class="weui-input"  name="input" value="100" disabled="true" />
            </view>
          </view>
        </checkbox-group>
       </view>
    </view>
    <view class="page-section">
        <view class="page-section-title">备注</view>
        <view class="weui-cells weui-cells_after-title">
          <view class="weui-cell weui-cell_input">
            <view class="weui-cell__bd">
              <input class="weui-input" name="input" value="我是备注11" disabled="true" />
            </view>
          </view>
        </view>
    </view>
    <view class="page-section">
      <view class="page-section-title">图片</view>
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__bd">
            <view class="images-wrapper">
              <view class="images-list">
                <block wx:for-items="{{imageList}}" wx:for-item="image">
                  <image src="{{image}}" class="images-image" data-src="{{image}}" bindtap="previewImage"></image>
                </block>
              </view>
            </view>
          </view>
        </view>
      </view>
    </view>
  </view> 
</view>